<h1>Add New Video</h1>

<form action="/videos" method="POST">
  
  <div class="form-group">
    <input class="form-control" name="video[title]" placeholder="Title">
  </div>

  <div class="form-group">
    <input class="form-control" name="video[genre]" placeholder="Genre">
  </div>

  <div class="input-group form-group">
    <div class="input-group-addon">http://www.youtube.com/watch?v=</div>
      <input class="form-control" name="video[url]" placeholder="">
  </div>

  
  <div class="form-group">
    <textarea class="form-control" name="video[description]" placeholder="Description"></textarea>
  </div>

  <button class="btn btn-primary">Save</button>

</form>

