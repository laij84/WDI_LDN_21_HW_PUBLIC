<h1>Lunch Recipes</h1>

<div class="row">
  <% @recipes.each do |recipe| %>
    <% if recipe.category == "Lunch" %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="<%= recipe.image %>" alt="<%= recipe.title %>">
          <div class="caption">
            <h3><%= recipe.title %></h3>
            <!-- <p>...</p> -->
            <p><a href="/recipes/<%= recipe.id %>" class="btn btn-primary" role="button">Show</a> <a href="/recipes/<%= recipe.id %>/edit" class="btn btn-default" role="button">Edit</a></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

