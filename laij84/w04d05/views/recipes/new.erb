<h1>Post a New Recipe</h1>

<form action="/recipes" method="POST">
  
  <div class="form-group">
    <label for="recipe_title">Title</label>
    <input class="form-control" type="text" name="recipe[title]" id="recipe_title">
  </div>

  <div class="form-group">
    <label for="recipe_author">Author</label>
    <input class="form-control" type="text" name="recipe[author]" id="recipe_author">
  </div>

  <div class="form-group">
    <label for="recipe_image">Image URL</label>
    <input class="form-control" type="text" name="recipe[image]" id="recipe_image">
  </div>

  <div class="form-group">
    <label for="recipe_category">Category</label>
    <select class="form-control" name="recipe[category]" id="recipe_category">
    <% @categories.each do |category| %>
    <option><%= category %></option>
    <% end %>
    </select>
  </div>

  <div class="form-group">
    <label for="recipe_description">Description</label>
    <input class="form-control" type="text" name="recipe[description]" id="recipe_description">
  </div>

  <div class="form-group">
    <label for="recipe_url">Recipe URL</label>
    <input class="form-control" type="text" name="recipe[recipe_url]" id="recipe_url">
  </div>
    <button class="btn btn-primary">Add Recipe</button>

</form>
