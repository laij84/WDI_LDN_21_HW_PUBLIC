<h2>New Post</h2>

<form action="/posts" method="POST">
  
  <div class="form-group">
    <input name="post[title]" placeholder="Title" class="form-control">
  </div>

  <div class="form-group">
    <textarea name="post[description]" placeholder="Description" class="form-control"></textarea>
  </div>

  <div class="form-group">
    <input type="date" name="post[date]" placeholder="Date: " class="form-control">
  </div>

  <div class="form-group">
    <input type="time" name="post[time]" placeholder="Time" class="form-control">
  </div>

  <% @lines.each do |line| %>
  <%= line.name %>
    <% @stations.each do |station| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="post[station_ids][]" value="<%= station.id %>">
          <%= station.name %> 
        </label>
      </div>
    <% end %>
  <% end %>

  <div class="form-group">
  <input type="hidden" name="post[user_id]" placeholder="User" class="form-control" value="<%= @user_id %>">
  </div>

  <button class="btn btn-primary">Save</button>

</form>