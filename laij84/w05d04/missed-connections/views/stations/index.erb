<h2>Stations</h2>

<div class="row">
  <% @stations.each do |station| %>
    <div class="col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <h2>
            <a href="/stations/<%= station.id %>">
              <%= station.name %>  
            </a>
          </h2> 
        </div>
      </div>
    </div>
  <% end %>
</div >

@memberships.sort_by!{ |m| m.group.name.downcase }