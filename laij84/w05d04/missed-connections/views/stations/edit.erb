<h2>Edit Station</h2>

<form action="/stations/<%= @station.id %> " method="POST">

<input type="hidden" name="_method" value="PUT">
  
  <div class="form-group">
    <input name="station[name]" placeholder="Name" class="form-control" value="<%= @station.name %>">
  </div>

  <p>Select which line(s) the station is on:</p>

    <% @lines.each do |line| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="station[line_ids][]" value="<%= line.id %>"<% if @station.line_ids.include? line.id %> checked<% end %>>
          <%= line.name %> 
        </label>
      </div>
    <% end %>

  <button class="btn btn-primary">Save</button>

</form>