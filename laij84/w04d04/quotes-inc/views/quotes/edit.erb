<form action="/quotes/<%= @quote.id %>" method="POST">
<input type="hidden" name="_method" value="PUT">

  <div class="form-group">
    <input type="text" name="quote[text]" value="<%= @quote.text %>" class="form-control">
  </div>

  <div class="form-group">
    <input type="text" name="quote[author]" value="<%= @quote.author %>" class="form-control">
  </div>

  <div class="form-group">
    <input type="submit" value='Save Quote' class="btn btn-default">
  </div>

</form>

<form method="POST" action="/quotes/<%= @quote.id %>">
<input type="hidden" name="_method" value="DELETE">
  <div class="form-group">
  <input type="submit" value='Delete Quote' class="btn btn-default">
  </div>
</form>